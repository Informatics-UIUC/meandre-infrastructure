<?xml version="1.0" encoding="UTF-8"?>
<project>
    <!-- app name-->
    <property name="app.name" value="meandre-core-trunk"/>
    <property name="build.version" value="'1.2'"/>

    <!-- Directory structure of the project -->
    <property name="build.dir" value="${basedir}/bin"/>
    <property name="dist.dir" value="${basedir}/dist"/>
    <property name="test.dir" value="${basedir}/test"/>

    <!-- Source code locations -->
    <property name="kernel.src" value="src-kernel"/>
    <property name="zigzag.src" value="src-zigzag"/>
    <property name="demo.src" value="src-demo"/>
    <property name="plugins.src" value="src-plugins"/>
    <property name="ws.src" value="src-ws"/>
    <property name="test.src" value="src-tests"/>

    <!-- Default options for code-generation, compiling and junit-testing -->
    <property name="javac.debug" value="true"/>
    <property name="compile.deprecation" value="true"/>

    <!-- build.compiler - seems to be issues using jikes and JDK 1.4 is just as fast-->
    <property name="build.compiler" value="modern"/>
    <property name="junit.fork" value="true"/>
    <property name="junit.showoutput" value="true"/>

    <!-- Library versions and JARs -->
    <property name="lib.dir" location="${basedir}/lib"/>
    <property file="${lib.dir}/lib.properties"/>

    <!-- Load user overrides -->
    <!-- <property file="${user.home}/.${ant.project.name}-build.properties"/>
    <property file="${user.home}/.build.properties"/>
    -->
    <property file="build.properties"/>

    <!-- Should Java compilations set the debug compiler option? -->
    <property name="compile.debug" value="true"/>
    <!-- Should Java compilations set the deprecation compiler option? -->
    <property name="compile.deprecation" value="false"/>
    <!-- Should Java compilations set the optimize compiler option? -->
    <property name="compile.optimize" value="false"/>

    <property name="tar.user" value="ant"/>
    <property name="tar.group" value="ant"/>
    <property name="tar.mode" value="644"/>

    <!-- =================================================================== -->
    <!-- Core Classpaths                                                     -->
    <!-- =================================================================== -->
    <path id="meandre.core.classpath">
        <fileset dir="${apache-derby.dir}" includes="*.jar"/>
        <fileset dir="${lucene.dir}" includes="*.jar"/>
        <fileset dir="${jetty.dir}" includes="*.jar"/>
        <fileset dir="${jena.dir}" includes="*.jar"/>
        <fileset dir="${saxon.dir}" includes="*.jar"/>
        <fileset dir="${svnant.dir}" includes="*.jar"/>
        <fileset dir="${xstream.dir}" includes="*.jar"/>
        <fileset dir="${rhino.dir}" includes="*.jar"/>
        <fileset dir="${nekohtml.dir}" includes="*.jar"/>
        <fileset dir="${jtidy.dir}" includes="*.jar"/>
        <fileset dir="${clojure.dir}" includes="*.jar"/>
        <fileset dir="${httpclient.dir}" includes="*.jar"/>
        <pathelement location="${truezip.jar}"/>
        <pathelement location="${apache-commons-upload.jar}"/>
        <pathelement location="${apache-commons-logging.jar}"/>
        <pathelement location="${apache-commons-io.jar}"/>
        <pathelement location="${jython.jar}"/>
    </path>

    <!-- =================================================================== -->
    <!-- Test Classpath                                                      -->
    <!-- =================================================================== -->
    <path id="meandre.test.classpath">
        <path refid="meandre.core.classpath"/>
        <pathelement location="${junit.jar}"/>
        <pathelement location="${httpunit.jar}"/>
        <pathelement location="${build.dir}"/>
    </path>

   <!-- =======================Specific to the Release server================ -->
   <property name="release.location"
       value="/content/web/root/maven2/org/monkproject/meandre-core"/>
   <property name="release.location.app"
       value="/content/web/root/maven2/org/monkproject/meandre-core-app"/>

 </project>

