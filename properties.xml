<?xml version="1.0" encoding="UTF-8"?>
<project>
    <!-- app name-->
    <property name="app.name" value="meandre"/>

    <!-- when you modify this version make sure to modify the
        org.meandre.core.utils.Constants.java  in the src-kernel/code
    -->
    <property name="build.version" value="1.4.5"/>

    <!-- Directory structure of the project -->
    <property name="build.dir" value="${basedir}/bin"/>
    <property name="dist.dir" value="${basedir}/dist"/>
    <property name="test.dir" value="${basedir}/test"/>
    <property name="doc.dir" value="${basedir}/docs"/>
    <property name="data.dir" value="${basedir}/data"/>

    <!-- Global required jars folder -->
    <property name="lib.dep.dir" value="${basedir}/lib/jars"/>

    <!-- Source code locations -->
    <property name="kernel.src" value="src-kernel/code"/>
    <property name="zigzag.src" value="src-zigzag/code"/>
    <property name="demo.src" value="src-demo/code"/>
    <property name="plugins.src" value="src-plugins/code"/>
    <property name="ws.src" value="src-webservices/code"/>
    <property name="store.src" value="src-store/code"/>
    <property name="client.src" value="src-client/code"/>
    <property name="annotation.src" value="src-annotation/code"/>
    <property name="coordinator.src" value="src-coordinator/code"/>
    <property name="executables.src" value="src-executables/code"/>

    <!-- Test code locations -->
    <property name="kernel.test" value="src-kernel/test"/>
    <property name="zigzag.test" value="src-zigzag/test"/>
    <property name="demo.test" value="src-demo/test"/>
    <property name="plugins.test" value="src-plugins/test"/>
    <property name="ws.test" value="src-webservices/test"/>
    <property name="store.test" value="src-store/test"/>
    <property name="client.test" value="src-client/test"/>
    <property name="coordinator.test" value="src-coordinator/test"/>
    <property name="executables.test" value="src-executables/test"/>

    <!-- The generic classpath to all the code (includes code and tests) -->
    <path id="meandre.javadoc.src">
        <fileset dir="${kernel.src}" includes="*"/>
        <fileset dir="${kernel.test}" includes="*"/>
        <fileset dir="${zigzagl.src}" includes="*"/>
        <fileset dir="${zigzag.test}" includes="*"/>
        <fileset dir="${demo.src}" includes="*"/>
        <fileset dir="${demo.test}" includes="*"/>
        <fileset dir="${plugins.src}" includes="*"/>
        <fileset dir="${plugins.test}" includes="*"/>
        <fileset dir="${ws.src}" includes="*"/>
        <fileset dir="${ws.test}" includes="*"/>
        <fileset dir="${store.src}" includes="*"/>
        <fileset dir="${store.test}" includes="*"/>
        <fileset dir="${client.src}" includes="*"/>
        <fileset dir="${client.test}" includes="*"/>
        <fileset dir="${coordinator.src}" includes="*"/>
        <fileset dir="${coordinator.test}" includes="*"/>
        <fileset dir="${executables.src}" includes="*"/>
        <fileset dir="${executables.test}" includes="*"/>
    </path>

    <!-- Default options for code-generation, compiling and junit-testing -->
    <property name="javac.debug" value="true"/>
    <property name="compile.deprecation" value="true"/>

    <!-- build.compiler - seems to be issues using jikes and JDK 1.4 is just as fast-->
    <property name="build.compiler" value="modern"/>
    <property name="junit.fork" value="true"/>
    <property name="junit.showoutput" value="true"/>

    <!-- Library versions and JARs -->
    <property name="lib.dir" location="${basedir}/lib"/>
    <property file="${lib.dir}/lib.properties"/>

    <!-- Load user overrides -->
    <!-- <property file="${user.home}/.${ant.project.name}-build.properties"/>
    <property file="${user.home}/.build.properties"/>
    -->
    <property file="build.properties"/>

    <!-- Should Java compilations set the debug compiler option? -->
    <property name="compile.debug" value="true"/>
    <!-- Should Java compilations set the deprecation compiler option? -->
    <property name="compile.deprecation" value="false"/>
    <!-- Should Java compilations set the optimize compiler option? -->
    <property name="compile.optimize" value="false"/>

    <property name="tar.user" value="ant"/>
    <property name="tar.group" value="ant"/>
    <property name="tar.mode" value="644"/>

    <!-- =================================================================== -->
    <!-- Core Classpaths                                                     -->
    <!-- =================================================================== -->
    <path id="meandre.core.classpath">
        <fileset dir="${apache-derby.dir}" includes="*.jar"/>
        <fileset dir="${lucene.dir}" includes="*.jar"/>
        <fileset dir="${jetty.dir}" includes="*.jar"/>
        <fileset dir="${jena.dir}" includes="*.jar"/>
        <fileset dir="${xstream.dir}" includes="*.jar"/>
        <fileset dir="${prefuse.dir}" includes="*.jar"/>
        <fileset dir="${httpclient.dir}" includes="*.jar"/>
        <pathelement location="${truezip.jar}"/>
        <pathelement location="${apache-commons-upload.jar}"/>
        <pathelement location="${apache-commons-logging.jar}"/>
        <pathelement location="${apache-commons-io.jar}"/>
        <pathelement location="${jython.jar}"/>
    	<pathelement location="${junit.jar}"/>
    	<pathelement location="${clojure.jar}"/>
    </path>

    <!-- =================================================================== -->
    <!-- Test Classpath                                                      -->
    <!-- =================================================================== -->
    <path id="meandre.test.classpath">
        <path refid="meandre.core.classpath"/>
        <pathelement location="${build.dir}"/>
        <pathelement location="${test.dir}"/>
    </path>

    <!-- =================================== -->
    <!-- Dist Classpath                      -->
    <!-- =================================== -->
    <path id="meandre.dist.classpath">
        <pathelement location="${dist.dir}/${app.name}-server-${build.version}.jar"/>
    </path>

 </project>

